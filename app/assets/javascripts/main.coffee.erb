# init round counter
# ==================================
  $('.round-input .ic-button').click ->
    $wrap = $(@).closest('.round-input')
    $input = $wrap.find('[name=quantity]')
    $input_val = +$wrap.find('[name=quantity]').val()

    if $(@).hasClass('input-count-up')
      $input_val++
      $input.val($input_val)
    else if $(@).hasClass('input-count-down')

      $input_val--
      if $input_val >= 1
        $input.val($input_val)


# ==================================
# binder for checkbox group
# ==================================
  $('input:checkbox').on 'click', ->
    # in the handler, 'this' refers to the box clicked on
    $box = $(this)
    if $box.is(':checked')
      # the name of the box is retrieved using the .attr() method
      # as it is assumed and expected to be immutable
      group = 'input:checkbox[name=\'' + $box.attr('name') + '\']'
      # the checked state of the group/box on the other hand will change
      # and the current value is retrieved using .prop() method
      $(group).prop 'checked', false
      $box.prop 'checked', true
    else
      $box.prop 'checked', false
    return


